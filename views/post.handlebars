<section class="post">
    <header>{{post.User.username}}</header>
    <section>
        <p>{{post.description}}</p>
        <p>{{post.time_created}}</p>
    </section>
    {{#each post.Comments}}
    {{> comment-details}}
    {{/each}}
    {{#if loggedIn}}
    <button id="comment">Comment</button>
    {{else}}
    <a href="/login">Login to Comment</a>
    {{/if}}
</section>